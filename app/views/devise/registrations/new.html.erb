

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
  <h2 class="text-center">Sign up</h2>
    <%= f.input :name, required: true, autofocus: true, placeholder: "User Name", label: false, input_html: {class: "form-control"} %>
    <%= f.input :email, required: true, placeholder: "Email", label: false, input_html: {class: "form-control"}%>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password", label: false, input_html: {class: "form-control"}%>
    <%= f.input :password_confirmation, required: true, label: false, input_html: {class: "form-control", placeholder: "Password Confrimation"} %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block"%>

<% end %>

<%= render "devise/shared/links" %>
